<div class="ds-result">
  <div class="ds-result__data">
    <div class="ds-result__primary">
      {{#if full_name}}
      <div class="ds-result__fullname">{{full_name}}</div>
      {{/if}}
      <div class="ds-result__email copy-email" data-email="{{value}}" data-toggle="tooltip" data-placement="top" title="Click to copy">{{value}}</div>
      <div class="ds-result__verification">
        {{#ifIsVerified verification.status}}
          <span class="tag tag--success" data-toggle="tooltip" data-placement="top" title="Valid">
            <span class="tag__label">
              <i aria-hidden="true" class="tag__icon fas fa-shield-check"></i>
              {{confidence}}%
            </span>
          </span>
        {{else}}
          {{#ifIsAcceptAll}}
            <span class="tag tag--warning" data-toggle="tooltip" data-placement="top" title="Accept All">
              <span class="tag__label">
                <i aria-hidden="true" class="tag__icon fas fa-shield-check"></i>
                {{confidence}}%
              </span>
            </span>
          {{else}}
            <div class="verification-result">
              <span class="tag tag--success" data-toggle="tooltip" data-placement="top" title="Confidence score: {{confidence}}%">
                <span class="score mr-1 {{confidence_score_class}}"></span>
                <span class="tag__label">
                  {{confidence}}%
                </span>
              </span>
            </div>
            <button type="button" class="h-button h-button--xs verification-link" data-email="{{value}}">
              Verify email
            </button>
          {{/ifIsAcceptAll}}
        {{/ifIsVerified}}
      </div>
    </div>
    <div class="ds-result__secondary">
      {{#if phone_number}}
      <div class="ds-result__attribute">
        <span class="far fa-phone"></span>
        {{phone_number}}
      </div>
      {{/if}}
      {{#if position}}
      <div class="ds-result__attribute">
        <span class="far fa-briefcase"></span>
        {{position}}
      </div>
      {{else if department}}
      <div class="ds-result__attribute">
        <span class="tag tag--sm ds-result__department">
          <span class="tag__label">{{department}}</span>
        </span>
      </div>
      {{/if}}
      <div class="ds-result__attribute">
        {{#if linkedin}}
        <a class="ds-result__social" href="{{linkedin}}" rel="noopener noreferrer nofollow" target="_blank" aria-label="LinkedIn Profile">
          <span class="fab fa-linkedin" aria-hidden="true"></span>
        </a>
        {{/if}}
        {{#if twitter}}
        <a class="ds-result__social" href="https://www.twitter.com/{{twitter}}" rel="noopener noreferrer nofollow" target="_blank" aria-label="Twitter Profile">
          <span class="fab fa-twitter" aria-hidden="true"></span>
        </a>
        {{/if}}
      </div>
    </div>
    <div class="ds-result__save">
      {{{lead_button}}}
    </div>
    <button aria-label="Toggle sources" class="ds-result__source sources-link" type="button">
      {{sources_link}}
      <span class="far fa-angle-down" aria-hidden="true"></span>
    </button>
  </div>

  {{#if sources}}
  <div class="ds-result__sources">
    <ul class="ds-sources-list">
      {{#each sources}}
      <li class="ds-sources-list__item {{#unless this.still_on_page}}ds-sources-list__item--outdated{{/unless}}">
        {{#unless this.still_on_page}}
        <span class="tag tag--sm">
          <span class="tag__label">
          Removed
          </span>
        </span>
        {{/unless}}
        <a class="ds-sources-list__link" href="{{this.uri}}#hunter-email:{{../value}}" rel="noopener noreferrer nofollow" target="_blank">
          {{this.uri}}
        </a>
        <time class="ds-sources-list__date">{{#userDate}}{{this.extracted_on}}{{/userDate}}</time>
      </li>
      {{/each}}
    </ul>
  </div>
  {{/if}}
</div>
