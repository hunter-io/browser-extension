{
  "name": "Hunter - Email Finder Extension",
  "short_name": "Hunter",
  "version": "3.0.0",
  "manifest_version": 3,
  "description": "Find email addresses from anywhere on the web, with just one click.",
  "homepage_url": "https://hunter.io",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_title": "Hunter",
    "default_popup": "html/browser_popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.hunter.io/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.hunter.io/*"
      ],
      "js": [
        "js/lib/jquery.min.js",
        "js/shared.js",
        "js/hunter_content_script.js"
      ]
    },
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/lib/jquery.min.js",
        "js/lib/purify.min.js",
        "js/lib/mark.js",
        "js/shared.js",
        "js/websites_content_script.js"
      ],
      "css": [
        "css/websites-sources.css"
      ]
     }
  ]
}
